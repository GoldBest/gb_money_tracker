{
  "name": "gb-money-tracker",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "concurrently \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:backend": "npm --prefix backend run dev",
    "dev:frontend": "npm --prefix frontend run dev",
    "dev:bot": "npm --prefix backend run dev:bot",
    "bot": "npm --prefix backend run bot",

    "setup:bot": "./setup-bot.sh",
    "setup:env": "./setup-env.sh",

    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "npm --prefix frontend run build",
    "build:backend": "npm --prefix backend run build",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules",
    "install:all": "npm install && npm --prefix backend install && npm --prefix frontend install",

    "docker:dev": "./scripts/dev-docker.sh",
    "docker:stop": "./scripts/stop-docker.sh",
    "docker:clean": "./scripts/clean-docker.sh",
    "docker:logs": "docker-compose logs -f",
    "docker:status": "docker-compose ps",
    "docker:restart": "docker-compose restart",
    "docker:rebuild": "docker-compose down && docker-compose up -d --build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "concurrently": "^9.2.0"
  },
  "dependencies": {
    "axios": "^1.11.0"
  }
}
