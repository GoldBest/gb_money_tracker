# ========================================
# ОБЩИЕ ПЕРЕМЕННЫЕ ОКРУЖЕНИЯ ДЛЯ ПРОЕКТА
# ========================================

# ========================================
# TELEGRAM BOT КОНФИГУРАЦИЯ
# ========================================
# Токен вашего Telegram бота (получите у @BotFather)
BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# URL вашего Web App (заполняется автоматически ngrok)
WEBAPP_URL=https://your-ngrok-url.ngrok-free.app

# URL для webhook (для продакшн)
WEBHOOK_URL=

# ========================================
# СЕРВЕР КОНФИГУРАЦИЯ
# ========================================
# Порт для backend сервера
PORT=3001

# Порт для frontend (Vite)
FRONTEND_PORT=5176

# Режим работы
NODE_ENV=development

# ========================================
# БАЗА ДАННЫХ
# ========================================
# Путь к базе данных SQLite
DB_PATH=./backend/money.db

# ========================================
# NGROK КОНФИГУРАЦИЯ
# ========================================
# Ngrok auth token
NGROK_AUTHTOKEN=314LYEGUIzQbhy1afASkUxaL7vg_3hYAJpqD7WK12biYZ8rzq

# Ngrok домен (если используете платный план)
NGROK_DOMAIN=

# ========================================
# API КОНФИГУРАЦИЯ
# ========================================
# URL для backend API (заполняется автоматически)
BACKEND_API_URL=http://localhost:3001

# URL для frontend (заполняется автоматически)
FRONTEND_URL=http://localhost:5176

# ========================================
# БЕЗОПАСНОСТЬ
# ========================================
# Секретный ключ для JWT (если используется)
JWT_SECRET=your-super-secret-jwt-key-here

# CORS настройки
CORS_ORIGIN=http://localhost:5176,https://your-ngrok-url.ngrok-free.app

# ========================================
# ЛОГИРОВАНИЕ
# ========================================
# Уровень логирования
LOG_LEVEL=info

# Путь к логам
LOG_PATH=./logs

# ========================================
# РАЗРАБОТКА
# ========================================
# Автоперезагрузка для nodemon
NODEMON_WATCH=backend

# Игнорируемые файлы для nodemon
NODEMON_IGNORE=node_modules,*.log,*.db

# ========================================
# ПРОДАКШН
# ========================================
# Домен для продакшн
PRODUCTION_DOMAIN=

# SSL сертификаты
SSL_CERT_PATH=
SSL_KEY_PATH=

# ========================================
# УВЕДОМЛЕНИЯ
# ========================================
# Telegram Chat ID для уведомлений
ADMIN_CHAT_ID=

# Email для уведомлений
ADMIN_EMAIL=
